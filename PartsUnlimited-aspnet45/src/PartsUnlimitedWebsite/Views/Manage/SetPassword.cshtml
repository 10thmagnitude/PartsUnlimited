@using PartsUnlimited.Utils
@model PartsUnlimited.Models.SetPasswordViewModel
@{
    ViewBag.Title = "Create Password";
}

<section>
    <h2>@ViewBag.Title</h2>
    <div class="row">
        <div class="col-md-6">
            <p class="text-info">
                You do not have a local username/password for this site. Add a local
                account so you can log in without an external login.
            </p>

            @using (Html.BeginForm("SetPassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()

                <h4>Create Local Login</h4>

                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    <div class="col-sm-8 col-md-10">
                        <div class="input-group">
                            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", placeholder = "Password" })
                            <span class="input-group-addon">@Html.Image("login_safe_icon.png")</span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-8 col-md-10">
                        <div class="input-group">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm Password" })
                            <span class="input-group-addon">@Html.Image("login_safe_icon.png")</span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-8 col-md-10">
                        <input type="submit" value="Set password" class="btn btn-default" />
                    </div>
                </div>
            }
        </div>
        <div class="col-md-6"></div>
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jquery.validate")
}